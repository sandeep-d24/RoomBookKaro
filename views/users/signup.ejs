<% layout("layouts/boilerplate") -%>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-7">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-body p-4">
                    <h2 class="text-center mb-4">Create Your Account</h2>
                    <form action="/signup" method="POST" class="needs-validation" novalidate>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="firstname" class="form-label">First Name</label>
                                <input name="firstname" id="firstname" type="text" class="form-control" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="lastname" class="form-label">Last Name</label>
                                <input name="lastname" id="lastname" type="text" class="form-control" required>
                            </div>
                        </div>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input name="username" id="username" type="text" class="form-control" required>
                            <div class="valid-feedback">Looks good!</div>
                        </div>
                        <div class="mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input name="email" id="email" type="email" class="form-control" required>
                            <div class="valid-feedback">Valid email!</div>
                        </div>
                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone Number</label>
                            <input name="phone" id="phone" type="tel" pattern="[0-9]{10}" class="form-control" required>
                        </div>
                     
                    
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input name="password" id="password" type="password" class="form-control" required>
                            <div class="valid-feedback">Password looks good!</div>
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-success rounded-pill">Sign Up</button>
                        </div>
                    </form>
                    <div class="text-center mt-3">
                        <small>Already have an account? <a href="/login">Log in</a></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
