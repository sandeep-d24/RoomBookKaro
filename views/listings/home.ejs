<% layout("layouts/boilerplate") -%>

<style>
    .listing-card {
  transition: transform 0.2s ease, box-shadow 0.2s ease;
}
.listing-card:hover {
  transform: translateY(-5px);
  box-shadow: 0 8px 20px rgba(0, 0, 0, 0.08);
}
.card-img-top {
  transition: filter 0.3s ease;
}
.card-img-top:hover {
  filter: brightness(0.95);
}

.gallery-img-container {
    height: 250px;
    border-radius: 15px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .gallery-img-container:hover {
    transform: scale(1.02);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.12);
  }

  .object-fit-cover {
    object-fit: cover;
  }

</style>
<!-- Hero Slider -->
<div id="heroCarousel" class="carousel slide carousel-fade mb-5" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="https://cdn0.agoda.net/images/blt2/dealshub/mainbanner.png" class="d-block w-100" style="height: 30vh; object-fit: cover;" alt="Slide 1">
      <div class="carousel-caption d-none d-md-block">
        <h1 class="fw-bold">Book Verified Hostels Across India</h1>
        <p>Comfortable, Safe, Affordable</p>
        <a href="#listings" class="btn btn-warning btn-lg mt-2">Browse Listings</a>
      </div>
    </div>
    <div class="carousel-item">
      <img src="https://cdn6.agoda.net/images/WebCampaign/20250625_th_amazingth/BLT_DT.png" class="d-block w-100" style="height: 30vh; object-fit: cover;" alt="Slide 2">
      <div class="carousel-caption d-none d-md-block">
        <h1 class="fw-bold">Exclusive Student Deals</h1>
        <p>Get the best rooms near colleges & workplaces</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#heroCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#heroCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
  </button>
</div>

<!-- Search Bar -->
<div class="container mb-5">
  <form action="/search" method="GET" class="row g-3">
    <div class="col-md-5">
      <input type="text" name="location" class="form-control form-control-lg" placeholder="Search by city, college or area" required>
    </div>
    <div class="col-md-5">
      <input type="date" name="date" class="form-control form-control-lg">
    </div>
    <div class="col-md-2 d-grid">
      <button class="btn btn-primary btn-lg" type="submit">Search</button>
    </div>
  </form>
</div>

<!-- Promo -->
<div class="container mb-4">
  <div class="alert alert-info text-center fs-5">
    üî• Limited Offer: Use <strong>ROOM20</strong> for 20% OFF on all bookings!
  </div>
</div>

<!-- Listings Section -->
<!-- Listings Section -->
<div id="listings" class="container mb-5">
  <h3 class="text-center fw-bold mb-5">üè† Featured Listings</h3>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    <% for(let listing of allListings){ %>
      <div class="col">
        <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark">
          <div class="card h-100 shadow-lg border-0 rounded-4 overflow-hidden listing-card">
            <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image"
              style="height: 220px; object-fit: cover; border-bottom: 1px solid #f0f0f0;">
            <div class="card-body">
              <h5 class="card-title fw-semibold text-truncate mb-1">
                <%= listing.title %>
              </h5>
              <p class="card-text mb-0 text-muted small">
                ‚Çπ <%= listing.price.toLocaleString("en-IN") %> / night
                <span class="text-muted">+18% GST</span>
              </p>
            </div>
          </div>
        </a>
      </div>
    <% } %>
  </div>
</div>





