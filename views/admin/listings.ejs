<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>RoomBookKaro Admin - Listings</title>

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet"/>

  <!-- DataTables CSS -->
  <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet"/>

  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f8f9fa;
    }
    .sidebar {
      height: 100vh;
      background: #343a40;
      color: white;
      padding-top: 1rem;
      position: fixed;
      left: 0;
      top: 0;
      width: 220px;
    }
    .sidebar a {
      color: white;
      text-decoration: none;
      padding: 10px 20px;
      display: block;
    }
    .sidebar a:hover {
      background-color: #495057;
    }
    .main-content {
      margin-left: 220px;
      padding: 2rem;
    }
    @media (max-width: 768px) {
      .main-content {
        margin-left: 0;
        padding: 1rem;
      }
      .sidebar {
        position: relative;
        width: 100%;
        height: auto;
      }
    }
    .table-img {
      width: 100px;
      height: 60px;
      object-fit: cover;
      border-radius: 5px;
    }
  </style>
</head>
<body>  

<!-- Sidebar -->
<nav class="sidebar">
  <h4 class="text-center mb-4">RoomBookKaro Admin</h4>
  <a href="#"><i class="fas fa-chart-line me-2"></i> Dashboard</a>
  <a href="/admin/listings"><i class="fas fa-home me-2"></i> Listings</a>
  <a href="/list"><i class="fas fa-users me-2"></i> Users</a>
  <a href="/list"><i class="fas fa-book me-2"></i> Bookings</a>
  <a href="/admin"><i class="fas fa-sign-out-alt me-2"></i> Logout</a>
</nav>


<!-- Main Content -->
<div class="main-content">
  <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
    <h2 class="mb-0">All Listings</h2>
    <a href="/admin/list/add" class="btn btn-success">
      <i class="fas fa-plus me-1"></i> Add New
    </a>
  </div>

  <div class="table-responsive">
    <table id="listingsTable" class="table table-bordered table-hover table-striped align-middle">
      <thead class="table-dark">
        <tr>
          <th>#</th>
          <th>Image</th>
          <th>Title</th>
          <th>Price (â‚¹)</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% listings.forEach((listing, index) => { %>
          <tr>
            <td><%= index + 1 %></td>
            <td><img src="<%= listing.image.url %>" alt="Image" class="table-img"></td>
            <td><%= listing.title %></td>
            <td><%= listing.price %></td>
            <td>
              <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-primary me-1 mb-1">
                <i class="fa-solid fa-eye"></i>
              </a>
              <a href="/editlist/<%= listing._id %>/admin_edit" class="btn btn-sm btn-warning me-1 mb-1">
                <i class="fa-solid fa-pen"></i>
              </a>
              <form action="/listings/<%= listing._id %>?_method=DELETE" method="POST" class="d-inline">
                <button class="btn btn-sm btn-danger mb-1" onclick="return confirm('Are you sure?')">
                  <i class="fa-solid fa-trash"></i>
                </button>
              </form>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div>

<!-- JS Libraries -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
  $(document).ready(function () {
    $('#listingsTable').DataTable({
      responsive: true,
      pageLength: 5,
      lengthMenu: [5, 10, 25, 50],
      language: {
        search: "Search listings:"
      }
    });
  });
</script>

</body>
</html>
