<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>RoomBookKaro Admin - Bookings</title>

  <!-- Bootstrap & FontAwesome -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"/>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet"/>
  <link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet"/>

  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #f8f9fa;
    }
    .sidebar {
      height: 100vh;
      background: #343a40;
      color: white;
      padding-top: 1rem;
      position: fixed;
      left: 0;
      top: 0;
      width: 220px;
    }
    .sidebar a {
      color: white;
      text-decoration: none;
      padding: 10px 20px;
      display: block;
    }
    .sidebar a:hover {
      background-color: #495057;
    }
    .main-content {
      margin-left: 220px;
      padding: 2rem;
    }
    @media (max-width: 768px) {
      .main-content {
        margin-left: 0;
        padding: 1rem;
      }
      .sidebar {
        position: relative;
        width: 100%;
        height: auto;
      }
    }
    .table-img {
      width: 100px;
      height: 60px;
      object-fit: cover;
      border-radius: 5px;
    }
  </style>
</head>
<body>

<!-- Sidebar -->
<nav class="sidebar">
  <h4 class="text-center mb-4">RoomBookKaro Admin</h4>
  <a href="#"><i class="fas fa-chart-line me-2"></i> Dashboard</a>
  <a href="/admin/listings"><i class="fas fa-home me-2"></i> Listings</a>
  <a href="/list"><i class="fas fa-users me-2"></i> Users</a>
  <a href="/admin/booking"><i class="fas fa-book me-2"></i> Bookings</a>
  <a href="/admin"><i class="fas fa-sign-out-alt me-2"></i> Logout</a>
</nav>

<!-- Main Content -->
<div class="main-content">
  <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
    <h2 class="mb-0">All Bookings</h2>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered table-hover table-striped align-middle">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Phone</th>
          <th>Email</th>
          <th>Booking ID</th>
          <th>Hotel Name</th>
          <th>Booking Start</th>
          <th>Booking End</th>
          <th>Booking Status</th>
          <th>Status Action</th>
          <th>Comment</th>
          <th>Status Change Time</th>
          <th>Check-in Status</th>
          <th>Check-in Action</th>
          <th>Check-out Action</th>
          <th>Check-in Comment</th>
          <th>Check-in Time</th>
          <th>Check-out Time</th>
          <th>Check-out Comment</th>
        </tr>
      </thead>
      <tbody>
        <% if (bookings.length === 0) { %>
          <tr>
            <td colspan="18" class="text-center">No bookings found.</td>
          </tr>
        <% } else { %>
          <% bookings.forEach(booking => { %>
            <tr>
              <td><%= booking?.name || '-' %></td>
              <td><%= booking?.Phone || '-' %></td>
              <td><%= booking?.email || '-' %></td>
              <td><%= booking?.bookingID || '-' %></td>
              <td><%= booking?.hotelName || '-' %></td>
              <td><%= booking?.bookingStartDate ? booking.bookingStartDate.toISOString().slice(0,10) : '-' %></td>
              <td><%= booking?.bookingEndDate ? booking.bookingEndDate.toISOString().slice(0,10) : '-' %></td>
              <td><%= booking?.bookingStatus || '-' %></td>

              <td>
                <% if (booking.bookingStatus === "New") { %>
                  <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#bookingStatusModal">Approve / Reject</button>
                <% } else { %>
                  <button class="btn btn-sm btn-secondary" disabled><%= booking.bookingStatus %></button>
                <% } %>
              </td>

              <td><%= booking?.comment || '-' %></td>
              <td><%= booking?.statusChangeTime ? booking.statusChangeTime.toLocaleString() : '-' %></td>
              <td><%= booking?.checkinStatus || 'Pending' %></td>

              <td>
                <% if (booking.checkinStatus === "Pending") { %>
                  <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#checkinStatusModal">Check-in / Decline</button>
                <% } else { %>
                  <button class="btn btn-sm btn-secondary" disabled><%= booking.checkinStatus %></button>
                <% } %>
              </td>

              <td>
                <% if (booking.checkinStatus === "CheckedIn") { %>
                  <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#checkoutStatusModal">Update Check-out</button>
                <% } else { %>
                  <button class="btn btn-sm btn-secondary" disabled>Checked Out</button>
                <% } %>
              </td>

              <td><%= booking?.checkinComment || '-' %></td>
              <td><%= booking?.checkinTime ? booking.checkinTime.toLocaleString() : '-' %></td>
              <td><%= booking?.checkoutTime ? booking.checkoutTime.toLocaleString() : '-' %></td>
              <td><%= booking?.checkoutComment || '-' %></td>
            </tr>
          <% }) %>
        <% } %>
      </tbody>
    </table>
  </div>
</div>

<!-- JS Libraries -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
<script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

<script>
  $(document).ready(function () {
    $('.table').DataTable({
      responsive: true,
      pageLength: 5,
      lengthMenu: [5, 10, 25, 50],
      language: {
        search: "Search bookings:"
      }
    });
  });
</script>

</body>
</html>
