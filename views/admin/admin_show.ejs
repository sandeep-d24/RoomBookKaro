    <p><b>All Reviews</b></p>
    <div class="row">
      <% listing.reviews.forEach(function(review) { %>
        <div class="card col-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title">@<%= review.author.username %></h5>
            <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
            <p class="card-text"><%= review.comment %></p>
            <% if (currUser && !currUser.isAdmin && review.author && review.author._id.toString() === currUser._id.toString()) { %>
              <form class="mb-3" method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE">
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
            <% } %>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
</div>

<% if (currUser && !currUser.isAdmin) { %>
  <div class="modal fade" id="bookingModal-<%= listing._id %>" tabindex="-1" aria-labelledby="bookingModalLabel-<%= listing._id %>" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="bookingModalLabel-<%= listing._id %>"><%= listing.title %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <form action="/bk/bookings" method="POST">
            <input type="hidden" name="listingId" value="<%= listing._id %>">
            <div class="mb-3">
              <label for="startDate-<%= listing._id %>" class="form-label">Start Date</label>
              <input type="date" class="form-control" id="startDate-<%= listing._id %>" name="startDate" required>
            </div>
            <div class="mb-3">
              <label for="endDate-<%= listing._id %>" class="form-label">End Date</label>
              <input type="date" class="form-control" id="endDate-<%= listing._id %>" name="endDate" required>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Book</button>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
<% } %>

<script src="/js/script.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>
